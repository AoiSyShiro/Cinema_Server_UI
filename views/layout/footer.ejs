<!-- Scripts -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Hàm để lấy thời gian từ server và cập nhật
    function updateServerTime() {
      fetch('/get-server-time')
        .then(response => response.json())
        .then(data => {
          // Hiển thị thời gian nhận được từ server
          document.getElementById('server-time').textContent = data.time;
        })
        .catch(error => {
          console.error('Error fetching server time:', error);
          document.getElementById('server-time').textContent = 'Không thể lấy thời gian';
        });
    }

    // Cập nhật thời gian khi trang load
    updateServerTime();
  });

  // Hàm để cuộn lên đầu trang
  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
</script>

