<%- include('layout/header.ejs') %>

<div class="container mx-auto p-6">
  <!-- Bảng danh sách đặt vé -->
  <table class="min-w-full bg-white border border-gray-200 shadow-md">
    <thead class="bg-gray-800 text-white">
      <tr>
        <th class="px-6 py-3 text-left">ID Đặt Vé</th>
        <th class="px-6 py-3 text-left">Người Dùng</th>
        <th class="px-6 py-3 text-left">Phim</th>
        <th class="px-6 py-3 text-left">Thời Gian Chiếu</th>
        <th class="px-6 py-3 text-left">Ghế</th>
        <th class="px-6 py-3 text-left">Ngày Đặt</th>
        <th class="px-6 py-3 text-left">Giá Tiền</th>
        <th class="px-6 py-3 text-left">Đồ Ăn & Thức Uống</th>
        <th class="px-6 py-3 text-left">Hình Thức Thanh Toán</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(booking => { %>
        <tr class="hover:bg-gray-50 border-b">
          <td class="px-6 py-4 text-sm text-gray-900 font-medium"><%= booking.book_tickets_id %></td>
          <td class="px-6 py-4 text-sm text-gray-900"><%= booking.user || 'N/A' %></td>
          <td class="px-6 py-4 text-sm text-gray-900"><%= booking.movie || 'N/A' %></td>
          <td class="px-6 py-4 text-sm text-gray-900"><%= booking.booking_time || 'N/A' %></td>
          <td class="px-6 py-4 text-sm text-gray-900"><%= booking.seats.join(', ') || 'N/A' %></td>
          <td class="px-6 py-4 text-sm text-gray-900"><%= new Date(booking.booking_time).toLocaleDateString() %></td>
          <td class="px-6 py-4 text-sm text-gray-900"><%= booking.price.toLocaleString() %> VND</td>
          <td class="px-6 py-4 text-sm text-gray-900">
            <% booking.food_drinks.forEach(food => { %>
              <div><%= food.name %> (x<%= food.quantity %>) - <%= food.total.toLocaleString() %> VND</div>
            <% }) %>
            <% if (booking.food_drinks.length === 0) { %> Không Có Thêm Đồ Ăn <% } %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-900"><%= booking.payment_method || 'N/A' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Nút mở popup tạo vé -->
  <button 
    class="mt-6 px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700"
    onclick="openAddTicketModal()">
    Tạo Vé Mới
  </button>

  <!-- Popup tạo vé -->
  <div id="addTicketModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden flex items-center justify-center">
    <div class="bg-white p-6 rounded-lg w-1/2 shadow-lg">
      <h2 class="text-2xl font-bold mb-6 text-gray-800">Tạo Vé Mới</h2>
      <form id="addTicketForm" method="POST" action="/book-tickets/create">
        <div class="mb-4">
          <label for="user_id" class="block text-sm font-medium text-gray-700">ID Người Dùng</label>
          <input 
            type="text" 
            name="user_id" 
            id="user_id" 
            class="mt-1 p-2 border border-gray-300 rounded-md w-full" 
            required
          />
        </div>
        <div class="mb-4">
          <label for="showtime_id" class="block text-sm font-medium text-gray-700">ID Suất Chiếu</label>
          <input 
            type="text" 
            name="showtime_id" 
            id="showtime_id" 
            class="mt-1 p-2 border border-gray-300 rounded-md w-full" 
            required
          />
        </div>
        <div class="mb-4">
          <label for="seats" class="block text-sm font-medium text-gray-700">Ghế</label>
          <input 
            type="text" 
            name="seats" 
            id="seats" 
            placeholder="A1, A2, ..." 
            class="mt-1 p-2 border border-gray-300 rounded-md w-full" 
            required
          />
        </div>
        <div class="mb-4">
          <label for="food_drinks" class="block text-sm font-medium text-gray-700">Đồ Ăn & Thức Uống (ID, Số Lượng)</label>
          <input 
            type="text" 
            name="food_drinks" 
            id="food_drinks" 
            placeholder="1,2; 3,1..." 
            class="mt-1 p-2 border border-gray-300 rounded-md w-full"
          />
        </div>
        <div class="mb-4">
          <label for="payment_method" class="block text-sm font-medium text-gray-700">Hình Thức Thanh Toán</label>
          <select 
            name="payment_method" 
            id="payment_method" 
            class="mt-1 p-2 border border-gray-300 rounded-md w-full"
            required>
            <option value="ZaloPay">ZaloPay</option>
            <option value="Momo">Momo</option>
            <option value="Tiền mặt">Tiền mặt</option>
          </select>
        </div>
        <div class="mb-4">
          <label for="price" class="block text-sm font-medium text-gray-700">Giá Tiền</label>
          <input 
            type="number" 
            name="price" 
            id="price" 
            class="mt-1 p-2 border border-gray-300 rounded-md w-full" 
            required
          />
        </div>
        <div class="flex justify-end">
          <button 
            type="button" 
            class="mr-4 px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700"
            onclick="closeAddTicketModal()">Hủy</button>
          <button 
            type="submit" 
            class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Tạo Vé</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('layout/footer.ejs') %>

<script>
  function openAddTicketModal() {
    document.getElementById('addTicketModal').classList.remove('hidden');
  }

  function closeAddTicketModal() {
    document.getElementById('addTicketModal').classList.add('hidden');
  }
</script>
